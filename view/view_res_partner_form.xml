<?xml version="1.0"?>
<odoo>
    <data>
        <record id="view_res_partner_form" model="ir.ui.view">
            <field name="name">sms.view.button</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <div name="button_box" position="inside">
                    <button class="oe_stat_button" type="object" name="get_sms" icon="fa-envelope-o">
                        <field string="SMS History" name="sms_count" widget="statinfo"/>
                    </button>
                </div>
            </field>
        </record>
    </data>
</odoo>